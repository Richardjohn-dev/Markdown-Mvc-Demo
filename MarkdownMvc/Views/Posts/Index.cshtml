@model PostViewModel

<section class="post">
    <h1>@Model.Title</h1>
    <p class="content">

    </p>
    <a href="/">Back</a>
</section>

<div class="container">

    <div class="row">
        <div class="col-md-12">
            @*<p>@Html.Raw(Model.Content)</p>*@
            <p>@(Html.Raw(Markdig.Markdown.ToHtml(Model.Content)))</p>
        </div>
    </div>

</div>

<style>
   
    p > code.hljs {
        display: inline;
        /* background-color: lightgray;*/
    }
    li > code.hljs {
        display: inline;
       /* background-color: lightgray;*/
    }
    li > code.hljs > span {
        display: inline;
    }
    code.hljs {
        border-radius: 10px;
    }

    #drop-area {
        border: 2px dashed #ccc;
        display: block;
        padding: 20px;
        margin-top: 50px;
    }

        #drop-area.highlight {
            border-color: gray;
        }

    #gallery {
        margin-top: 10px;
    }

        #gallery img {
            width: 150px;
            margin-bottom: 10px;
            margin-right: 10px;
            vertical-align: middle;
        }

</style>

